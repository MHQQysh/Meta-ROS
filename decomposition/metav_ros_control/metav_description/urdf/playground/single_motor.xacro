<?xml version="1.0"?>
<robot name="single_motor" xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:arg name="is_simulation" default="true"/>
    <xacro:arg name="roller_type" default="simple"/>

    <link name="base_footprint">
    </link>

    <!-- raise the robot a bit higher to prevent it from stucking in the ground -->
    <joint name="joint_base_to_footprint" type="fixed">
        <origin rpy="0 0 0.2" xyz="0 0 0"/> 
        <parent link="base_footprint"/>
        <child link="base_link"/>
    </joint>

    <link name="base_link">
        <inertial>
            <mass value="12.326"/>
            <origin xyz="-0.000932  -0.000668  -0.01"/>
            <inertia ixx="1.924e-1" ixy="-6.458e-4" ixz="5.951352e-3" iyy="2.473e-1"
                     iyz="-7.22e-4" izz="3.187e-1"/>
        </inertial>
        <visual>
            <origin xyz="0 0 0.05" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.25" length="0.1"/>
            </geometry>
            <material name="silver">
                <color rgba="0.700 0.700 0.700 1.000"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0.05" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.25" length="0.1"/>
            </geometry>
        </collision>
    </link>

    <joint name="motor_joint" type="continuous">
        <origin xyz="0 0 0.1" rpy="0 0 0"/>
        <parent link="base_link"/>
        <child link="motor_top"/>
        <dynamics damping="0.0" friction="0.1"/>
        <limit effort="30" velocity="2.0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="motor_top">
        <inertial>
            <mass value="12.326"/>
            <origin xyz="-0.000932  -0.000668  -0.01"/>
            <inertia ixx="1.924e-1" ixy="-6.458e-4" ixz="5.951352e-3" iyy="2.473e-1"
                     iyz="-7.22e-4" izz="3.187e-1"/>
        </inertial>
        <visual>
            <origin xyz="0 0 0.1" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.25" length="0.2"/>
            </geometry>
            <material name="black">
                <color rgba="0.000 0.000 0.000 1.000"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0.1" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.25" length="0.2"/>
            </geometry>
        </collision>
    </link>

    <joint name="motor_top_indicator_joint" type="fixed">
        <origin xyz="0.2 0 0.2" rpy="0 0 0"/>
        <parent link="motor_top"/>
        <child link="motor_top_indicator"/>
    </joint>

    <link name="motor_top_indicator">
        <inertial>
            <mass value="12.326"/>
            <origin xyz="-0.000932  -0.000668  -0.01"/>
            <inertia ixx="1.924e-1" ixy="-6.458e-4" ixz="5.951352e-3" iyy="2.473e-1"
                     iyz="-7.22e-4" izz="3.187e-1"/>
        </inertial>
        <visual>
            <origin xyz="0 0 0.01" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.05" length="0.02"/>
            </geometry>
            <material name="white">
                <color rgba="1.000 1.000 1.000 1.000"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0.01" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.05" length="0.02"/>
            </geometry>
        </collision>
    </link>

    <ros2_control name="single_motor_control" type="system">
        <xacro:if value="$(arg is_simulation)">
            <hardware>
                <plugin>ign_ros2_control/IgnitionSystem</plugin>
            </hardware>
        </xacro:if>
        <xacro:unless value="$(arg is_simulation)">
            <hardware>
                <plugin>metav_hardware/MetavRobotHardwareInterface</plugin>
            </hardware>
        </xacro:unless>
        <joint name="motor_joint">
            <command_interface name="effort"/>
            <state_interface name="position"/>
            <state_interface name="velocity"/>
            <state_interface name="effort"/>
        </joint>
    </ros2_control>

    <xacro:if value="$(arg is_simulation)">
        <gazebo>
            <plugin filename="ign_ros2_control-system"
                name="ign_ros2_control::IgnitionROS2ControlPlugin">
                <parameters>$(find metav_description)/config/single_motor.yaml</parameters>
            </plugin>
        </gazebo>
    </xacro:if>
</robot>